<div class="users-list-items">
  <h1 class="follower-head">フォロワー一覧</h1>
  <% @users.each do |user| %>
    <%= link_to user_path(user) do %>
      <%= attachment_image_tag user, :image, size: '120x100' %>
      <p class="user-list-username">ユーザーネーム：<%= user.name %></p> <%# if current_user.id == 0 %><%# admin権限持ちなので削除ボタンがある。 %><%# end%>
    <% end %>
    <p>
      <% if current_user.following?(user) %>
        <%= link_to "フォロー外す", user_relationships_path(user.id), method: :delete %>
      <% else %>
        <%= link_to "フォローする", user_relationships_path(user.id), method: :post %>
      <% end %>
    </p>
  <% end %>
</div>