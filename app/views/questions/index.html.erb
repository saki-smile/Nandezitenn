<div class="page-padding">
  <div class="question-contents">
    <!--カテゴリー一覧-->
    <div class="categories-index categories-question-index">
      <%= render 'questions/categories', categories: @categories %>
    </div>
    <!--記事一覧-->
    <div class="questions-list">
      <h1 class="questions-list-head">
        <% if @category.present? %>
          <%= @category.name %>
        <% else %>
          なんで
        <% end %>
        <ruby>記事<rt>きじ</rt>一覧<rt>いちらん</rt></ruby>
      </h1>
      <% if @questions.present? %>
        <%= render 'questions/question', questions: @questions %>
      <% else %>
        <p>まだ記事はありません</p>
      <% end %>
      <div class="question-index-paginate paginate">
        <%= paginate @questions %>
      </div>
    </div>
  </div>
</div>
