<h1><ruby>新規投稿<rt>しんきとうこう</rt></ruby></h1>
<%= form_with model: @question, local:true do |f| %>
  <div class="question-field">
    <%= f.label :title, "タイトル" %><br>
    <%= f.text_field :title %>
  </div>
  <div class="question-field">
    <%= f.attachment_field :image %>
  </div>
  <div class="question-field">
    <%= f.label :observation do %>
      <ruby>気<rt>き</rt></ruby>づいたこと
    <% end %><br>
    <%= f.text_area :observation %>
  </div>
  <div class="question-field">
    <%= f.label :impression do %>
      <ruby>思<rt>おも</rt></ruby>ったこと
    <% end %><br>
    <%= f.text_area :impression %>
  </div>
  <div class="question-field">
    <%= f.label :realization do %>
      わかったこと
    <% end %><br>
    <%= f.text_area :realization %>
  </div>
  <div class="question-field">
    <%= f.label :uncertainty do %>
      まだわからないこと
    <% end %><br>
    <%= f.text_area :uncertainty %>
  </div>
  <%= f.submit 'とうこう！' %>
<% end %>