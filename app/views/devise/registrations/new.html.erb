<div class="signUp-page">
  <div class="signUp-contents">
    <h1 class="signUp-head">
      <ruby>新規<rt>しんき</rt>登録<rt>とうろく</rt></ruby>
    </h2>
    <%= form_with model: @user, url: user_registration_path,  id: 'new_user', class: 'new_user', local: true do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <table class="signUp-table">
        <tr>
          <th><p><%= f.label :name %></p></th>
          <th><%= f.text_field :name, autofocus: true, class: "signUp-field" %></th>
        </tr>
        <tr>
          <th><p><%= f.label :email %></p></th>
          <th><%= f.email_field :email, autofocus: true, autocomplete: "email", class: "signUp-field" %></th>
        </tr>
        <tr>
          <th>
            <p>
              <%= f.label :password %>
              <% if @minimum_password_length %>
              （ <%= @minimum_password_length %> <ruby>文字<rt>もじ</rt>以上<rt>いじょう</rt></ruby> )
              <% end %>
            </p>
          </th>
          <th><%= f.password_field :password, autocomplete: "new-password", class: "signUp-field" %></th>
        </tr>
        <tr>
          <th>
            <p>
              <%= f.label :password_confirmation %>
              （ <ruby>確認用<rt>かくにんよう</rt></ruby> ）
            </p>
          </th>
          <th><%= f.password_field :password_confirmation, autocomplete: "new-password", class: "signUp-field" %></th>
        </tr>
      </table>
      <div class="signUp-actions">
        <button type="submit" class="signUp-btn">
           新規登録
        </button>
      </div>
    <% end %>
    
    <%#= render "devise/shared/links" %>
  </div>
</div>
