<div class="devise-page">
  <div class="post-contents-box">
    <h1 class="post-contents-head">
      <ruby>新規<rt>しんき</rt>登録<rt>とうろく</rt></ruby>
    </h2>
    <%= form_with model: @user, url: user_registration_path,  id: 'new_user', class: 'new_user', local: true do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <table class="devise-table">
        <tr>
          <th><p class="signup-p"><%= f.label :name %></p></th>
          <th><%= f.text_field :name, autofocus: true, class: "devise-field" %></th>
        </tr>
        <tr>
          <th><p class="signup-p"><%= f.label :email %></p></th>
          <th><%= f.email_field :email, autofocus: true, autocomplete: "email", class: "devise-field" %></th>
        </tr>
        <tr>
          <th>
            <p class="signup-p">
              <%= f.label :password do %>
                パスワード
                <% if @minimum_password_length %>
                （ <%= @minimum_password_length %> 文字以上 )
                <% end %>
              <% end %>
            </p>
          </th>
          <th><%= f.password_field :password, autocomplete: "new-password", class: "devise-field" %></th>
        </tr>
        <tr>
          <th class="devise-field">
            <p class="signup-p">
              <%= f.label :password_confirmation do %>
                パスワード（ かくにん ）
              <% end %>
            </p>
          </th>
          <th><%= f.password_field :password_confirmation, autocomplete: "new-password", class: "devise-field" %></th>
        </tr>
      </table>
      <div class="actions">
        <button type="submit" class="btn">
          新規登録
        </button>
      </div>
    <% end %>

    <%#= render "devise/shared/links" %>
  </div>
</div>
