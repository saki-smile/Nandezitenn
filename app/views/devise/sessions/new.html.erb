<div class="devise-page">
  <div class="devise-contents">
    <h2 class="devise-head">ログイン</h2>
    <%= form_with model: @user, url: user_session_path, local: true do |f| %>
      <table class="devise-table">
        <tr>
          <th><p><%= f.label :email %></p></th>
          <th><%= f.email_field :email, autofocus: true, autocomplete: "email", class: "devise-field" %></th>
        </tr>
        <tr>
          <th><p><%= f.label :password %></p></th>
          <th><%= f.password_field :password, autocomplete: "current-password", class: "devise-field" %></th>
        </tr>
      </table>
      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me, "ログイン情報を記録する" %>
        </div>
      <% end %>

      <div class="actions">
        <button type="submit" class="btn">
          ログイン
        </button>
      </div>
    <% end %>

    <%#= render "devise/shared/links" %>
  </div>
</div>