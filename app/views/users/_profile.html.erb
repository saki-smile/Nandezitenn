<p><%= user.name %></p>
<%= attachment_image_tag user, :image, size: '140x100' %>
<p><%= user.introduction %></p>
<% if current_user && user.id == current_user.id %>
  <p><%= link_to "プロフィール編集", edit_user_path(user) %></p>
<% end %>
<!--お気に入り一覧-->
<p><%= link_to "お気に入りなんで事典", users_favorites_path(user) %></p>
<!--フォローボタン-->
<div class="follow-btn">
  <%= render 'follow', user: user %>
</div>

<p><%= link_to "フォロー一覧", user_followed_path(user) %></p>
<p><%= link_to "フォロワー一覧", user_follower_path(user) %></p>
