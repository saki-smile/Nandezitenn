<div class="user-page">
  <div class="user-contents">
    <!--カテゴリー一覧-->
    <div class="categories-index categories-user-index">
      <%= render 'questions/categories', categories: @categories %>
    </div>
    <!--ユーザー一覧-->
    <div class="users-list">
      <h1 class="questions-list-head">ユーザー<ruby>一覧<rt>いちらん</rt></ruby></h1>
      <div class="users-list-content">
        <% @users.each do |user| %>
        <div class="user-list-item">
          <!--管理者は一覧に表示されないようにする-->
          <% unless user.admin? %>
            <!--管理者は退会済み会員も見れる-->
            <% if current_user && current_user.admin? %>
              <%= link_to user_path(user), class: "user-list-link" do %>
                <%= attachment_image_tag user, :image, size: '80x80', class: "user-list-img" %>
                <p class="user-list-username"><%= user.name %></p> <%# if current_user.id == 0 %><%# admin権限持ちなので削除ボタンがある。 %><%# end%>
              <% end %>
              <div class="user-status">
                <% if user.is_active == true %>
                  <p>退会済み</p>
                <% else %>
                 <p>有効</p>
                <% end %>
              </div>
            <% else %>
              <!--会員は、有効会員のみ見れる-->
            　<% if user.is_active == false %>
                <%= link_to user_path(user), class: "user-list-link" do %>
                  <%= attachment_image_tag user, :image, size: '80x80', class: "user-list-img" %>
                  <p class="user-list-username"><%= user.name %></p>
                <% end %>
              <% end %>
            <% end %>
          <% end %>
        </div>
        <% end %>
      </div>
      <div class="user-index-paginate paginate">
        <%= paginate @users %>
      </div>
    </div>
  </div>
</div>
