<div class="comments-count">
  コメント数: <%= @question.comments.count %>
</div>
<div class="commments-area">
  <table>
  <% comments.each do |comment| %>
    <tr>
      <td>
      <%= link_to user_path(comment.user) do %>
        <%= comment.user.name %>
      <% end %>
      </td>
      <td><%= comment.body %></td>
      <td>
        <% if comment.user == current_user %>
          <%= link_to "Destroy", question_comment_path(comment.question, comment), method: :delete, remote: true %>
        <% end %>
      </td>
    </tr>
  <% end %>
  </table>
</div>